                    option(value='American Samoa') AS
                    option(value='District of Columbia') DC
                    option(value='Federated States of Micronesia') FM
                    option(value='Guam') GU
                    option(value='Marshall Islands') MH
                    option(value='Northern Mariana Islands') MP
                    option(value='Palau') PW
                    option(value='Puerto Rico') PR
                    option(value='Virgin Islands') VI
                input(name='country' id='country' value='United States' required='true')
              #submitreset
                input(type='reset')
                input(type='submit')

          div= firstName
          div= lastName
          div= addrOne
          div= addrTwo
          div= city
          div= state
          div= zip
          div=country